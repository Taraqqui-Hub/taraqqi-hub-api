# Database
DATABASE_URL=postgresql://user:password@localhost:5432/taraqqi_hub

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
HASHING_SALT_ROUNDS=10

# Server
PORT=3001
NODE_ENV=development
ENV=dev

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Cookie
# Cross-domain (frontend and API on different domains, e.g. equario.x + api.hyperlink.xyz): set AUTH_CROSS_DOMAIN=true (uses SameSite=None; Secure â€” HTTPS required)
AUTH_CROSS_DOMAIN=false
# Same parent domain (e.g. app.example.com + api.example.com): set COOKIE_DOMAIN=.example.com to share cookie across subdomains
# COOKIE_DOMAIN=.equalio.com
COOKIE_EXPIRY_IN_SECONDS=2592000

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
FROM_EMAIL=noreply@equalio.com
FROM_NAME=Equalio

# Redis (for queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
